---
import GoDownCircle from "../components/GoDownCircle.astro";

const topics = [
  "Emprendimiento para los Negocios",
  "Financiamiento para Emprendedores",
  "Innovación Empresarial",
  "Storytelling",
  "Marketing de Servicios",
  "E-Commerce",
  "Community Manager",
  "Estrategia Digital y Social Media",
];
---

<section
  class="mx-auto py-10 max-w-7xl px-6 sm:py-14 lg:py-20 lg:px-8 relative"
>
  <div class="relative pb-20">
    <div class="mx-20">
      <h2 class="font-bold text-[#ff0049] text-5xl text-center">
        ¿Qué voy aprender?
      </h2>

      <div
        class="grid mt-10 sm:mt-14 lg:mt-20 md:grid-cols-2 gap-6 justify-center md:justify-normal"
      >
        {
          topics.map((topic) => (
            <div class="flex items-center gap-6">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.25"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-16 h-16 text-[#ff0049] flex-none"
              >
                <>
                  <line x1="7" y1="17" x2="17" y2="7" />
                  <polyline points="7 7 17 7 17 17" />
                </>
              </svg>

              <p class="text-[#ff0049] text-3xl max-w-xs">{topic}</p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Squares (top-left corner) -->
    <div class="absolute top-0 -z-10">
      <svg class="w-10 h-10">
        <rect x="20" y="0" width="20" height="20" fill="#4f0b3e"></rect>
        <rect x="0" y="20" width="20" height="20" fill="#ff0049"></rect>
      </svg>
    </div>

    <!-- Squares (top-middle) -->
    <div class="absolute top-1/2 -left-5 md:left-4 -z-10">
      <svg class="w-10 h-10">
        <rect x="20" y="0" width="20" height="20" fill="#ff0049"></rect>
        <rect x="20" y="20" width="20" height="20" fill="#4f0b3e"></rect>
      </svg>
    </div>

    <!-- Squares (bottom-left corner) -->
    <div class="absolute bottom-0 -z-10">
      <svg class="w-10 h-10">
        <rect x="0" y="20" width="20" height="20" fill="#ff0049"></rect>
      </svg>
    </div>

    <!-- Squares (top-right corner) -->
    <div class="absolute bottom-0 md:bottom-[10%] right-1/2 -z-10">
      <svg class="w-5 h-5">
        <rect x="0" y="0" width="20" height="20" fill="#4f0b3e"></rect>
      </svg>
    </div>

    <!-- Squares (top-right corner) -->
    <div class="absolute top-0 right-0 -z-10">
      <svg class="w-10 h-10">
        <rect x="20" y="20" width="20" height="20" fill="#4f0b3e"></rect>
        <rect x="0" y="20" width="20" height="20" fill="#ff0049"></rect>
      </svg>
    </div>

    <!-- Squares (top-middle) -->
    <div class="absolute top-[45%] right-0 md:right-9 -z-10">
      <svg class="w-5 h-5">
        <rect x="0" y="0" width="20" height="20" fill="#ff0049"></rect>
      </svg>
    </div>

    <!-- Squares (bottom-right corner) -->
    <div class="absolute bottom-5 right-0 -z-10">
      <svg class="w-10 h-10">
        <rect x="20" y="0" width="20" height="20" fill="#ff0049"></rect>
        <rect x="0" y="20" width="20" height="20" fill="#ff0049"></rect>
        <rect x="20" y="20" width="20" height="20" fill="#4f0b3e"></rect>
      </svg>
    </div>
  </div>

  <div class="absolute bottom-0 left-1/2 translate-y-1/2">
    <GoDownCircle />
  </div>
</section>
